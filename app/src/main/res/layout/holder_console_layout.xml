<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/drawable_cantos_redondos"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/image_console"
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:src="@drawable/xbox"
                android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/text_view_console_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X-Box One"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/image_game"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:ignore="MissingConstraints"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_console_description"
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:text="@string/description_console"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            />

        </LinearLayout>





    </RelativeLayout>
