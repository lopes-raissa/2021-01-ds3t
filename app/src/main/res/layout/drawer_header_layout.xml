<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:text="http://schemas.android.com/tools"
    android:background="@drawable/background_pacman"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_photo_perfil"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:cardCornerRadius= "32dp"
        app:layout_constraintBottom_toTopOf="@+id/textview_perfil_name"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/photo_perfil"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textview_perfil_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eduardo Cruz"
        app:layout_constraintBottom_toTopOf="@+id/textview_perfil_email"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <TextView
        android:id="@+id/textview_perfil_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eduardo@gmail.com"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/button_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/button_editar"
        app:layout_constraintEnd_toEndOf="@+id/button_editar"
        app:layout_constraintTop_toBottomOf="@+id/button_editar">

    </View>

</androidx.constraintlayout.widget.ConstraintLayout>

